extends layout

block content
  div.navbar.navbar-inverse.navbar-fixed-top
    div.navbar-inner
      div.container
        button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href='#') Bitstarter
        div.nav-collapse.collapse
          ul.nav
            li.active: a(href='#') Home
            li: a(href='#about') About
            li: a(href='#contact') Contact
  div.container
    div.row-fluid.heading
      div.span12
        h1 Product
    div.row-fluid.subheading
      div.span12
        p.lead One sentence description
    div.row-fluid.pitch
      div.span5.offset1.video
        img.img-polaroid(src='http://placehold.it/480x300')
      div.span5.actions
        div.span8.offset2
          div.statistics
            div.span4
              div.linediv-l
                h3 1000
                p backers
            div.span4
              div.linediv-c
                h3 $6000
                p of $10,000
            div.span4
              div.linediv-r
                h3 10
                p days left
            div.span12
              div.thermometer.progress.active
                div.bar.bar-success(style='width: 60%')
                div.bar.bar-warning(style='width: 40%')
            div.span6.offset3.order
              button.btn.btn-success.btn-large Preorder
            div.span10.offset1.social
              button.btn.btn-twitter
                i.icon-twitter
                |  | Twitter
              | 
              button.btn.btn-facebook
                i.icon-facebook
                |  | Facebook
                
              